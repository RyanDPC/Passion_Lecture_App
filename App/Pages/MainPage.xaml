<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModel="clr-namespace:App.ViewModels"
             xmlns:conv="clr-namespace:App.Helper"
             x:Class="App.Pages.MainPage"
             BackgroundColor="#0B0B0D"
             Title="Passion Lecture">

    <ContentPage.BindingContext>
        <ViewModel:BookViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- HEADER -->
        <VerticalStackLayout Padding="20,40,20,10" Spacing="20" Grid.Row="0">
            <Label Text="Passion Lecture"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White" />
            <Border Stroke="#4F4F60"
                    StrokeThickness="1"
                    Margin="10,0">
                <Grid BackgroundColor="#1C1C24">
                    <Entry Placeholder="Rechercher un livre..." 
                           PlaceholderColor="#B0B0C3"
                           TextColor="White"
                           BackgroundColor="Transparent"
                           Margin="10,0"/>
                </Grid>
            </Border>
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
                <Label Text="Accueil"
                       TextColor="White"
                       FontSize="14"/>
                <Label Text="Découvrir"
                       TextColor="White"
                       FontSize="14"/>
                <Label Text="Mes Livres"
                       TextColor="White"
                       FontSize="14"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <!-- MAIN : CollectionView des livres -->
        <CollectionView x:Name="BooksCollection"
                        Grid.Row="1"
                        ItemsSource="{Binding Books}"
                        Margin="20,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0" Margin="0,10">
                        <VerticalStackLayout>
                            <!-- Image de couverture -->
                            <Image Source="{Binding CoverImage, Converter={StaticResource ByteArrayToImageConverter}}"
                                   HeightRequest="200"
                                    Aspect="AspectFill"/>
                            <!-- Titre du livre -->
                            <Label Text="{Binding Name}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="Black"
                                   Margin="10,5,10,0"/>
                            <HorizontalStackLayout HorizontalOptions="Center" Spacing="2" Margin="0,5,0,10">
                                <Image Source="{Binding RatingBook}" HeightRequest="20" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- FOOTER : Bouton flottant -->
        <Grid Grid.Row="2">
            <Button Text="+"
                    FontSize="24"
                    WidthRequest="60"
                    HeightRequest="60"
                    BackgroundColor="#B388FF"
                    CornerRadius="30"
                    HorizontalOptions="End"
                    Margin="20,-30,20,0"
                    TextColor="White" />
        </Grid>
    </Grid>
</ContentPage>
